<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#32405d"
    tools:context=".views.AddPost">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Post Title:"
            android:id="@+id/textView"
            android:textColor="#cacaca" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postTitleEditText"
            android:layout_gravity="right"
            android:textColor="#cacaca" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Option 1:"
            android:id="@+id/textView2"
            android:textColor="#cacaca" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description1EditText"
            android:layout_weight="0.48"
            android:text="Option 1..."
            android:textColor="#cacaca" />
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:id="@+id/addPostImageView1"
        android:src="@mipmap/ic_image_upload"
        android:paddingBottom="10dp"
        android:layout_gravity="center" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Option 2:"
            android:id="@+id/textView3"
            android:textColor="#cacaca" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description2EditText"
            android:layout_weight="1"
            android:text="Option2..."
            android:textColor="#cacaca" />
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:id="@+id/addPostImageView2"
        android:src="@mipmap/ic_image_upload"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:weightSum="1"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView6"
                android:src="@mipmap/ic_token"
                android:layout_gravity="top|right|center_horizontal"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="$"
                android:id="@+id/tokens"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="3dp"
                android:textColor="#CACACA"
                android:layout_marginLeft="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Promotion Text"
                android:id="@+id/promotionText"
                android:layout_gravity="center"
                android:textColor="#78c26f"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:text="Post"
                android:id="@+id/postButton"
                android:singleLine="true"
                android:textSize="15dp" />

            <Button
                android:layout_width="96dp"
                android:layout_height="fill_parent"
                android:text="notify"
                android:id="@+id/notificationButton"
                android:textSize="15dp" />

            <Button
                android:layout_width="95dp"
                android:layout_height="fill_parent"
                android:text="Promote"
                android:id="@+id/promoteButton"
                android:textSize="15dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:text="Cancel"
                android:id="@+id/cancelButton"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>