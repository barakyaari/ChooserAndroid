<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gender Distribution:"
            android:id="@+id/textView9"
            android:textColor="#cacaca"
            android:layout_marginLeft="7dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_female" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0%"
                android:id="@+id/dist_data1"
                android:layout_gravity="left|center_vertical"
                android:textColor="#cacaca" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/percentBar"
            android:layout_width="237dp"
            android:layout_height="80dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0%"
                android:id="@+id/dist_data2"
                android:layout_gravity="center"
                android:textColor="#cacaca" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView3"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_male" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center" >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_female" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0%"
                android:id="@+id/female_data1"
                android:layout_gravity="left|center_vertical"
                android:textColor="#cacaca" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Female Votes:"
            android:id="@+id/textView7"
            android:textColor="@color/genderBarFemale"
            android:layout_marginLeft="7dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/femaleBar"
            android:layout_width="237dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.0%"
            android:id="@+id/female_data2"
            android:layout_gravity="right|center_vertical"
            android:textColor="#cacaca"
            android:layout_marginRight="40dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView7"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_male"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0%"
                android:id="@+id/male_data1"
                android:layout_gravity="left|center_vertical"
                android:textColor="#cacaca" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Male Votes:"
            android:id="@+id/textView8"
            android:textColor="@color/genderBarMale"
            android:layout_marginLeft="7dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/maleBar"
            android:layout_width="237dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.0%"
            android:id="@+id/male_data2"
            android:layout_gravity="right|center_vertical"
            android:textColor="#cacaca"
            android:layout_marginRight="40dp" />

    </FrameLayout>

</LinearLayout>